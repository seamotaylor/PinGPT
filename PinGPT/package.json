{
  "name": "pingpt-extension",
  "version": "1.0.0",
  "description": "A Chrome extension to bookmark and organize ChatGPT conversations with content extraction.",
  "type": "module",
  "main": "src/background.js",
  "scripts": {
    "build": "npm run clean && npm run build:extension",
    "build:extension": "webpack --mode=production",
    "build:dev": "webpack --mode=development --watch",
    "dev": "npm run build:dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "clean": "rimraf dist",
    "package": "npm run build && npm run package:extension",
    "package:extension": "cd dist && zip -r ../pingpt-extension-v$npm_package_version.zip .",
    "prebuild": "npm run lint",
    "start": "npm run dev"
  },
  "keywords": [
    "chrome",
    "extension",
    "bookmark",
    "chatgpt",
    "ai",
    "productivity"
  ],
  "author": "PinGPT Team",
  "license": "MIT",
  "dependencies": {
    "chrome-types": "^0.1.214"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.54.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rimraf": "^5.0.5",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}